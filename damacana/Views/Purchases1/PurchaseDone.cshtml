@using Damacana.Models
@model Purchase


<body style="background-image:url(http://img0.mxstatic.com/wallpapers/112e4ab8c5074372011bcd4aa862ee2c_large.jpeg)">


    <h3><span class="label label-success"> You bought them! </span></h3>

    <h3 style="color:antiquewhite">Payment Information</h3>

    <table style="width:30%">
        <tr>
            <td>
                <div class="alert alert-danger" role="alert">
                    <h4 class="media-heading">Toplam Tutar: @Model.TotalPrice TL</h4>
                    <h4 class="media-heading">Purchase Id: @Model.Id</h4>
                    <h4 class="media-heading">Ödeme Tarihi: @Model.CreatedOn</h4>
                    @for (int i = 0; i < Model.PurchaseList.Count(); i++)
                    {
                        <ul>
                            <li>
                                @Model.PurchaseList[i].Price TL -  @Model.PurchaseList[i].Name
                            </li>
                        </ul>
                    }

                </div>
            </td>
        </tr>
    </table>
    <nav>
        <table style="width:60%">
            <tr>
                <td>
                    <ul class="pager">

                        <li><a href="@Url.Action("PurchaseHistory")">PurchaseHistory </a></li>
                    </ul>
                </td>
                <td>
                    <ul class="pager">
                        <li><a href="@Url.Action("Index","Products")">Products</a></li>

                    </ul>
                </td>
            </tr>
        </table>
    </nav>
</body>