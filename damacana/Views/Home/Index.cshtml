@using Damacana.Models
@model List<Damacana.Models.Product>

<br />
<a class="btn btn-toolbar" href="@Url.Action("NewProduct")">Create New Product</a> |
<a class="btn btn-toolbar" href="@Url.Action("Index", "Cart")">View Your Cart</a> |
<a class="btn btn-toolbar" href="@Url.Action("PurchaseList", "Cart")">View Previous Purchases</a>
<hr />
<br />
<h2>List of Products:</h2>
<hr />
@foreach (Product p in Model)
{

    <div class="media">
        <div class="media-left">
            <a href="@Url.Action("ProductDetails", new { id = p.id })">
                <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
            </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading">@p.name</h4>
            @p.price TL
        </div>
        <a class="btn btn-success" href="@Url.Action("AddToCart","Cart", new { id = p.id})">Add 1 to Cart</a>
    </div>

}