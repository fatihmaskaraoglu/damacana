@using Damacana.Models;
@model List<Damacana.Models.Product> 
@{
    ViewBag.Title = "ProductList";
}


  <table style="width:50%">
      <tr>
          <td>
              <a class="btn btn-info" href="@Url.Action("AddProduct")"><b>AddProduct</b></a>
              <a class="btn btn-info" href="@Url.Action("CartList")"><b>Open Cart </b></a>
          </td>
      </tr>
  </table>
<hr />
<h2>ProductList</h2>
@foreach (var p in Model)
{
    <table style="width:50%">

        <tr>
            <td>
                <div class="media">
                    <div class="media-left">
                        <a href="#">
                            <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="http://www.damacanasufirmalari.com/wp-content/themes/yeni_damacana/images/damacana.png" data-holder-rendered="true" style="width: 149px; height: 120px;">

                        </a>

                    </div>
                </div>

            </td>

            <td>
                <div class="alert alert-success" role="alert">
                    <h4 class="media-heading">@p.Name</h4>
                    <b>@p.Price TL</b>
                </div>
            </td>
            <td>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a class="btn btn-info" href="@Url.Action("AddtoCart", new { name = p.Name })"><b>AddtoCart</b></a>
                <a class="btn btn-info" href="@Url.Action("EditProduct", new { name = p.Name }))"><b>Edit</b></a>
                <a class="btn btn-info" href="@Url.Action("DeleteProduct", new { name = p.Name }))"><b>Delete</b></a>
            </td>

        </tr>
    </table>
}
