@using damacana.Models
@model List<damacana.Models.Product>

@{
    ViewBag.Title = "Cart";
}

@foreach (Product p in Model)
{
    <h2>
        @p.Name (@p.Id)
    </h2>
    <p>
        @p.Price
    </p>
    <button type="submit" class="btn btn-default">Satın al</button>
    <hr />
}
<a href="@Url.Action("Index")">
    Back to mainpage
</a>