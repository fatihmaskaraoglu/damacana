@using Damacana.Models
@model IEnumerable<Damacana.Models.Product>


<body style="background-image:url(http://img0.mxstatic.com/wallpapers/112e4ab8c5074372011bcd4aa862ee2c_large.jpeg)">
    <br />
    <a class="btn btn-success" href="@Url.Action("NewProduct")">New Product</a>
    <br />
    <h2 style="color:whitesmoke">Our Products</h2>
    <hr />
    @foreach (Product p in Model)
    {
        <table style="width:67%">
            <tr>
                <td>
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="http://www.damacanasufirmalari.com/wp-content/themes/yeni_damacana/images/damacana.png" data-holder-rendered="true" style="width: 149px; height: 120px;">
                            </a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="alert alert-success" role="alert">
                        <h4 class="media-heading">@p.Name</h4>
                        <b>@p.Price TL</b>

                    </div>
                </td>
                <td>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-info" href="@Url.Action("AddCart", new { name = p.Name})"><b>Add Cart</b></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-info" style="color:white" href="@Url.Action("Edit", new { name = p.Name })"><b>Edit Product</b></a>
                    
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-danger" style="color:white" href="@Url.Action("DeleteFromList", new { name = p.Name })"><b>Delete it</b></a>
                </td>
            </tr>
        </table>


        <hr />
    }
</body>